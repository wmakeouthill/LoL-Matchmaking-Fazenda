{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "main.ts",
    "preload.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}

