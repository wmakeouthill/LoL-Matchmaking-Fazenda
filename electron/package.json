{
  "name": "lol-matchmaking-electron",
  "version": "1.0.0",
  "description": "LOL Matchmaking Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "dev": "tsc && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "LOL Matchmaking Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.17",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.lolmatchmaking.app",
    "productName": "LOL Matchmaking",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}

