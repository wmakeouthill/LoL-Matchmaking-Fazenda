{
  "appId": "com.lolmatchmaking.app",
  "productName": "LOL Matchmaking",
  "directories": { 
    "output": "dist-electron"
  },
  "files": [
    "electron/**/*",
    "package.json",
    "!electron/assets/**/*"
  ],
  "win": { 
    "icon": "build/icon.ico",
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "linux": { 
    "icon": "build/icon.png",
    "target": "AppImage"
  },
  "mac": { 
    "icon": "build/icon.png",
    "target": "dmg"
  },
  "portable": {
    "artifactName": "LOL-Matchmaking-Portable.exe",
    "unpackDirName": "LOL-Matchmaking",
    "useZip": false
  },
  "compression": "store"
}
